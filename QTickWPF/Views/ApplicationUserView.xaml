<Page x:Class="QTickWPF.Views.ApplicationUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QTickWPF.Views"
        mc:Ignorable="d"
        Title="ApplicationUserView" Height="550" Width="900">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="White">

            <TextBlock Text="ApplicationUser List" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,50,0,0" Padding="3" Height="30" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
            <ListBox ItemsSource="{Binding Events}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="400" Width="500" Margin="200,50,0,0">
                 <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="Binding ApplicationUsers + ABst sisestuskuupäev"></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Text="Nupp Useri jaoks Edit, kustutada hiljem, andmin peaks saama Edit/Delete listboxis" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="500" Margin="200,100,0,0" Padding="3" FontSize="14" ></TextBlock>

        </Grid>
    </ScrollViewer>
</Page>
