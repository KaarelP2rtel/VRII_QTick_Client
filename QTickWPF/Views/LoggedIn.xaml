<Page x:Class="QTickWPF.Views.LoggedIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QTickWPF.Views"
        mc:Ignorable="d"
        d:DesignHeight="130" d:DesignWidth="240"
        Title="LoggedIn">

    <Grid Margin="0,-22,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="logoutBtn" Content="Log Out" Margin="5" Click="logoutBtn_Click" Grid.Row="0" Grid.Column="1"/>
        <TextBlock x:Name="userName" Margin="5" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="newRecipeBtn" Content="New Event" Margin="5" Click="newRecipeBtn_Click" Grid.Row="1" Grid.Column="0"/>
        <Button x:Name="SettingsBtn" Content="Settings" Margin="5" Click="SettingsBtn_Click" Grid.Row="1" Grid.Column="1"/>

    </Grid>

</Page>
